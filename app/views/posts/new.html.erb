<h2 class="text-2xl font-bold mb-4">New Post</h2>

<%= form_with(model: @post, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :body %><br>
    <%= form.text_area :body, rows: 3, class: "w-full border rounded p-2" %>
  </div>
  <%= form.submit "Post", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% end %>
